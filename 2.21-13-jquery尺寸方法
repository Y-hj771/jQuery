            background-color: firebrick;
            border: 10px solid navy;
            padding: 10px;
            margin: 10px;
        }
    </style>
    <script src="./jQuery-mini.js"></script>
    <script>
        $(function(){
            //width()/height() 获取设置元素 width和height大小
            // console.log($('div').width());
            // $('div').width(300)
            
            //innerWitdh()/innerHeight() 获取设置元素 width和height + padding 大小
            console.log($('div').innerWidth());

            //outerWidth() / outerHeight() 获取设置元素 width和height + padding + border 大小
            console.log($('div').outerWidth());

            //outerWidth(true) / outerHeight(true) 获取设置 width和height + padding +border + margin 大小
            console.log($('div').outerWidth(true));
            
            })
    </script>
